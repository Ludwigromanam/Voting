  <% @reports.each do |report| %>
  <tr>
    <td><%= report.poll.title %></td>
    <td><%= report.poll.questions.count %></td>
    <td>to be implemented</td>
    <td>to be implemented</td>
   
    <td class="tblcol-link"><%= link_to 'Show', report %></td>
    
   
  </tr>
  <% end %>
