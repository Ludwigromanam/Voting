<% content_for :title do %>
  Active Poll: <%= @active_poll.poll.title %>
<% end %>

<% content_for :head do %>
  <%= javascript_include_tag 'pollster' %>
<% end %>

<% content_for :notice do %>
  <%= notice %>
<% end %>

<div class="data">
  <div id="active_poll_id"><%= @active_poll.id %></div>
  <div id="active_question_id"><%= @active_poll.question.id %></div>
</div>

<p>
	<h2><%= @active_poll.question.body %></h2>
  
</p>
<p>
  <h3>Choices</h3>
  <ol>
    <% @active_poll.question.answers.each do |a| %>
      <li><%= a.body %></li>
    <% end %>
  </ol>
</p>

<p>
  <%= link_to 'Next', next_active_poll_path %> | 
  <!--goto: <%= collection_select :active_poll, :question, @active_poll.poll.questions.all, :to_s, :body %> -->
  <%= link_to 'Previous', prev_active_poll_path %> |
  <%= link_to 'End poll', end_poll_path %>
</p>



