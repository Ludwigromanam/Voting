<% content_for :head do %>
  <%= javascript_include_tag 'mobile', 'clicker' %>
<% end %>

<% content_for :title do %>
  <%= @active_poll.poll.title %>
<% end %>

<% content_for :notice do %>
  <%= notice %>
<% end %>

<span id="active_poll_id"><%= @active_poll.id %></span>

<div id="container_question" class="info">
  <h2><%= @active_poll.question.body %></h2>
</div>
<ul id="container_answers" class="rounded">
  <% @active_poll.question.answers.each do |a| %>
    <li class="arrow">
      <%= link_to a.body, clicker_submit_path({:anchor => "pageSubmit", :answer_id => a}), {:class => "answer"} %>
    </li>
  <% end %>
</ul>

<div id="reload-question" class="content">
  <p><%= link_to "Click here", clicker_path(@active_poll.token) %>  <span>to reload the question.</span></p>
</div>